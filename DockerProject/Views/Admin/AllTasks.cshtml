@model List<DockerProject.Models.ProjectTask>
@{
    ViewData["Title"] = "Toate Task-urile";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-list-task"></i> Toate Task-urile</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Admin" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active">Task-uri</li>
                </ol>
            </nav>
        </div>
        
        <div class="btn-group">
            <a asp-action="AllTasks" class="btn @(string.IsNullOrEmpty(ViewBag.Status) ? "btn-primary" : "btn-outline-primary")">
                Toate
            </a>
            <a asp-action="AllTasks" asp-route-status="ToDo" 
               class="btn @(ViewBag.Status == "ToDo" ? "btn-secondary" : "btn-outline-secondary")">
                ToDo
            </a>
            <a asp-action="AllTasks" asp-route-status="InProgress" 
               class="btn @(ViewBag.Status == "InProgress" ? "btn-info" : "btn-outline-info")">
                In Progress
            </a>
            <a asp-action="AllTasks" asp-route-status="Review" 
               class="btn @(ViewBag.Status == "Review" ? "btn-warning" : "btn-outline-warning")">
                Review
            </a>
            <a asp-action="AllTasks" asp-route-status="Done" 
               class="btn @(ViewBag.Status == "Done" ? "btn-success" : "btn-outline-success")">
                Done
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Task</th>
                            <th>Proiect</th>
                            <th>Status</th>
                            <th>Data Începere</th>
                            <th>Deadline</th>
                            <th>Assignați</th>
                            <th class="text-center">Acțiuni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var task in Model)
                            {
                                var isOverdue = task.DeadLine < DateTime.Now && task.Status != TaskStatusEnum.Done;
                                <tr class="@(isOverdue ? "table-danger" : "")">
                                    <td>
                                        <strong>@task.Name</strong>
                                        @if (!string.IsNullOrEmpty(task.Description))
                                        {
                                            <br/>
                                            <small class="text-muted">
                                                @(task.Description.Length > 60 
                                                    ? task.Description.Substring(0, 60) + "..." 
                                                    : task.Description)
                                            </small>
                                        }
                                    </td>
                                    <td>
                                        @if (task.ProjectParent != null)
                                        {
                                            <a asp-controller="Projects" asp-action="Show" asp-route-id="@task.ProjectParentId">
                                                @task.ProjectParent.Title
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(task.Status)">
                                            @task.Status
                                        </span>
                                    </td>
                                    <td>@task.AssignedDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        @task.DeadLine.ToString("dd MMM yyyy")
                                        @if (isOverdue)
                                        {
                                            <br/>
                                            <span class="badge bg-danger">OVERDUE</span>
                                        }
                                    </td>
                                    <td>
                                        @if (task.Users.Any())
                                        {
                                            @foreach (var user in task.Users.Take(2))
                                            {
                                                <span class="badge bg-info me-1">@user.UserName</span>
                                            }
                                            @if (task.Users.Count > 2)
                                            {
                                                <span class="badge bg-secondary">+@(task.Users.Count - 2)</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Neasignat</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Projects" asp-action="Show" asp-route-id="@task.ProjectParentId" 
                                               class="btn btn-sm btn-outline-info" title="Vezi Proiect">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <form asp-controller="ProjectTasks" asp-action="Delete" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@task.Id"/>
                                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                        title="Șterge"
                                                        onclick="return confirm('Sigur doriți să ștergeți acest task?');">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    Nu există task-uri@(string.IsNullOrEmpty(ViewBag.Status) ? "" : $" cu statusul {ViewBag.Status}").
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Paginare -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" 
                           asp-action="AllTasks" 
                           asp-route-page="@i" 
                           asp-route-status="@ViewBag.Status">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }

    <div class="mt-3">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Înapoi la Dashboard
        </a>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(TaskStatusEnum status)
    {
        return status switch
        {
            TaskStatusEnum.ToDo => "bg-secondary",
            TaskStatusEnum.InProgress => "bg-info",
            TaskStatusEnum.Review => "bg-warning",
            TaskStatusEnum.Done => "bg-success",
            _ => "bg-secondary"
        };
    }
}
