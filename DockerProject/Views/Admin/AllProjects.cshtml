@model List<DockerProject.Models.Project>
@{
    ViewData["Title"] = "Toate Proiectele";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-folder-fill"></i> Toate Proiectele</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Admin" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active">Proiecte</li>
                </ol>
            </nav>
        </div>
        
        <form method="get" asp-action="AllProjects" class="d-flex">
            <input type="text" name="search" value="@ViewBag.Search" 
                   class="form-control me-2" placeholder="Caută proiect..."/>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Titlu</th>
                            <th>Organizator</th>
                            <th>Data Creării</th>
                            <th>Task-uri</th>
                            <th>Membri</th>
                            <th class="text-center">Acțiuni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var project in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@project.Title</strong>
                                        @if (!string.IsNullOrEmpty(project.Description))
                                        {
                                            <br/>
                                            <small class="text-muted">
                                                @(project.Description.Length > 80 
                                                    ? project.Description.Substring(0, 80) + "..." 
                                                    : project.Description)
                                            </small>
                                        }
                                    </td>
                                    <td>@project.Founder?.UserName</td>
                                    <td>@project.CreatedDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        <span class="badge bg-info">@project.Tasks.Count</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@project.Members.Count(m => m.Status == ProjectMemberStatus.Accepted)</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Projects" asp-action="Show" asp-route-id="@project.Id" 
                                               class="btn btn-sm btn-outline-info" title="Vezi">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-controller="Projects" asp-action="Edit" asp-route-id="@project.Id" 
                                               class="btn btn-sm btn-outline-warning" title="Editează">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-controller="Projects" asp-action="Delete" method="post" class="d-inline">
                                                <input type="hidden" name="projectid" value="@project.Id"/>
                                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                        title="Șterge"
                                                        onclick="return confirm('Sigur doriți să ștergeți acest proiect?');">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    @if (!string.IsNullOrEmpty(ViewBag.Search))
                                    {
                                        <span>Nu s-au găsit proiecte pentru căutarea "@ViewBag.Search"</span>
                                    }
                                    else
                                    {
                                        <span>Nu există proiecte create.</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Paginare -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" 
                           asp-action="AllProjects" 
                           asp-route-page="@i" 
                           asp-route-search="@ViewBag.Search">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }

    <div class="mt-3">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Înapoi la Dashboard
        </a>
    </div>
</div>
