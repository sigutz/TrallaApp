@using DockerProject.Models
@using Microsoft.AspNetCore.Identity
@model DockerProject.Models.ProjectTask

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@functions {
    // Funcția ta pentru contrast
    public string GetContrastColor(string hexColor)
    {
        if (string.IsNullOrEmpty(hexColor)) return "#000000";
        var cleanHex = hexColor.Replace("#", "");
        if (cleanHex.Length != 6) return "#000000";
        var r = Convert.ToInt32(cleanHex.Substring(0, 2), 16);
        var g = Convert.ToInt32(cleanHex.Substring(2, 2), 16);
        var b = Convert.ToInt32(cleanHex.Substring(4, 2), 16);
        var yiq = ((r * 299) + (g * 587) + (b * 114)) / 1000;
        return (yiq >= 128) ? "#000000" : "#FFFFFF";
    }
}

<button class="card p-2 border-0 shadow-sm w-100 text-start btn-light" 
        style="transition: transform 0.2s;"
        onmouseover="this.style.transform='scale(1.02)'"
        onmouseout="this.style.transform='scale(1)'"
        id="btn-launch-task-modal-@Model.Id">
    
    <div class="d-flex flex-row gap-1 flex-wrap mb-2">
        @foreach (Tag tag in Model.Tags)
        {
            <div class="rounded px-2 py-0 shadow-sm"
                 style="background: @tag.HexColor; color: @GetContrastColor(tag.HexColor); font-size: 0.65rem; font-weight: 700;">
                @tag.Name
            </div>
        }
    </div>
    
    <div class="fw-bold text-dark" style="font-size: 0.9rem;">
        @Model.Name
    </div>
    
    <div class="d-flex justify-content-between mt-2 text-muted" style="font-size: 0.75rem;">
        <span><i class="bi bi-calendar"></i> @Model.DeadLine.ToString("dd MMM")</span>
        <span><i class="bi bi-chat-left"></i> @Model.Comments.Count()</span>
    </div>
</button>   

<div class="modal fade" id="task-modal-@Model.Id" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content" style="border-radius: 12px; overflow: hidden;">

            <div class="modal-header bg-light border-bottom-0 pb-2">
                <div class="d-flex align-items-center gap-3 w-100">
                    
                    <div class="fs-4">
                        @if(Model.Status == TaskStatusEnum.Done) { <i class="bi bi-check-circle-fill text-success"></i> }
                        else if(Model.Status == TaskStatusEnum.InProgress) { <i class="bi bi-play-circle-fill text-primary"></i> }
                        else if(Model.Status == TaskStatusEnum.Review) { <i class="bi bi-eye-fill text-warning"></i> }
                        else { <i class="bi bi-circle text-secondary"></i> }
                    </div>

                    <h4 class="modal-title fw-bold m-0 flex-grow-1">@Model.Name</h4>

                    <div class="d-flex gap-2">
                         <a asp-controller="Tasks" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-sm rounded-pill">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <button type="button" class="btn-close" id="btn-close-task-modal-@Model.Id" aria-label="Close"></button>
                    </div>
                </div>
            </div>

            <div class="modal-body p-0">
                <div class="container-fluid">
                    <div class="row" style="min-height: 60vh;"> 
                        
                        <div class="col-lg-8 col-md-7 p-4 bg-white" style="border-right: 1px solid #eee;">
                            
                            <div class="mb-4">
                                <h6 class="text-uppercase text-muted small fw-bold mb-2">Description</h6>
                                <div class="p-3 bg-light rounded text-dark" style="min-height: 100px;">
                                    @if (!string.IsNullOrEmpty(Model.Description))
                                    {
                                        @Html.Raw(Model.Description.Replace("\n", "<br>"))
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">No description provided for this task.</span>
                                    }
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <h6 class="text-uppercase text-muted small fw-bold mb-2">Details</h6>
                                    <ul class="list-unstyled small">
                                        <li class="mb-2 d-flex justify-content-between">
                                            <span class="text-muted">Status:</span>
                                            <span class="badge bg-secondary">@Model.Status</span>
                                        </li>
                                        <li class="mb-2 d-flex justify-content-between">
                                            <span class="text-muted">Created:</span>
                                            <span class="fw-bold">@Model.AssignedDate.ToString("dd MMM yyyy")</span>
                                        </li>
                                        <li class="mb-2 d-flex justify-content-between">
                                            <span class="text-muted">Deadline:</span>
                                            <span class="fw-bold text-danger">@Model.DeadLine.ToString("dd MMM yyyy")</span>
                                        </li>
                                    </ul>
                                </div>

                                <div class="col-md-6">
                                    <h6 class="text-uppercase text-muted small fw-bold mb-2">Assigned To</h6>
                                    <div class="d-flex gap-1 flex-wrap">
                                        @if(Model.Users.Any())
                                        {
                                            foreach(var user in Model.Users)
                                            {
                                                <div class="d-flex align-items-center bg-light rounded-pill pe-2 ps-1 py-1 border">
                                                    <i class="bi bi-person-circle fs-6 me-1 text-secondary"></i>
                                                    <span class="small">@(user.UserName ?? user.Email)</span>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <span class="small text-muted">Unassigned</span>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="mt-4">
                                <h6 class="text-uppercase text-muted small fw-bold mb-2">Tags</h6>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (Tag tag in Model.Tags)
                                    {
                                        <span class="badge rounded-pill border" 
                                              style="background-color: @tag.HexColor; color: @GetContrastColor(tag.HexColor);">
                                            @tag.Name
                                        </span>
                                    }
                                    <button class="btn btn-sm btn-outline-secondary rounded-circle" style="width: 24px; height: 24px; padding: 0;">
                                        <i class="bi bi-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-5 bg-light d-flex flex-column h-100 p-0" style="border-left: 1px solid #ddd;">
                            
                            <div class="p-3 border-bottom bg-white d-flex justify-content-between align-items-center">
                                <h6 class="m-0 fw-bold"><i class="bi bi-chat-left-text me-2"></i>Comments</h6>
                                <span class="badge bg-secondary rounded-pill">@Model.Comments.Count()</span>
                            </div>

                            <div class="flex-grow-1 p-3 overflow-auto" style="max-height: 500px;">
                                @{
                                    // Filtrăm doar comentariile părinte (Top Level)
                                    var topLevelComments = Model.Comments?
                                        .Where(c => c.CommentParentId == null)
                                        .OrderByDescending(c => c.Date);
                                }

                                @if (topLevelComments != null && topLevelComments.Any())
                                {
                                    foreach (var comment in topLevelComments)
                                    {
                                        <partial name="~/Views/Comments/_CommentThread.cshtml" model="comment"/>
                                    }
                                }
                                else
                                {
                                    <div class="text-center text-muted mt-5">
                                        <i class="bi bi-chat-square-dots fs-1"></i>
                                        <p class="small mt-2">No comments yet on this task.</p>
                                    </div>
                                }
                            </div>

                            <div class="p-3 bg-white border-top">
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <form asp-controller="Comments" asp-action="New" method="post">
                                        <input type="hidden" name="ProjectParentId" value="@Model.ProjectParentId" />
                                        <div class="input-group">
                                            <textarea name="Content" class="form-control form-control-sm" placeholder="Write a comment..." rows="1" style="resize:none;" required></textarea>
                                            <button type="submit" class="btn btn-primary btn-sm">
                                                <i class="bi bi-send-fill"></i>
                                            </button>
                                        </div>
                                    </form>
                                }
                                else
                                {
                                    <p class="text-center small m-0"><a asp-area="Identity" asp-page="/Account/Login">Login</a> to comment.</p>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    // Scriptul de activare
    window.addEventListener('load', function () {
        // Folosim clasele native Bootstrap 5 pentru JS daca jQuery nu e preferat, 
        // dar pastrez stilul jQuery folosit de tine in exemplu:
        $('#btn-launch-task-modal-@Model.Id').click(() => $('#task-modal-@Model.Id').modal('show'));
        $('#btn-close-task-modal-@Model.Id').click(() => $('#task-modal-@Model.Id').modal('hide'));
    });
</script>