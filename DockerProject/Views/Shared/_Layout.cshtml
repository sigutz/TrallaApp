@using Microsoft.AspNetCore.Identity
@using DockerProject.Models
@inject UserManager<ApplicationUser> MyUserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - DockerProject</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css"/>

    <style>
        body {
            margin-bottom: 0px;
        }
        /* 1. Hamburger Button */
        .hamburger-btn {
            position: fixed;
            top: 15px;
            left: 20px;
            font-size: 30px;
            cursor: pointer;
            z-index: 2000;
            background-color: transparent;
            border: none;
            color: #333;
            padding: 5px;
        }

        /* 2. Sidebar Container */
        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1000;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 60px;
            transition: 0.4s;
            white-space: nowrap;
            box-shadow: 4px 0 10px rgba(0,0,0,0.5);
        }

        /* 3. General Sidebar Links */
        .sidenav a, .sidenav-btn-logout {
            padding: 10px 10px 10px 32px;
            text-decoration: none;
            font-size: 18px;
            color: #818181;
            display: block;
            transition: 0.3s;
            border: none;
            background: none;
            width: 100%;
            text-align: left;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidenav a:hover, .sidenav-btn-logout:hover {
            color: #f1f1f1;
            background-color: #333;
        }

        /* 4. Close Button */
        .sidenav .closebtn {
            position: absolute;
            top: 0;
            right: 20px;
            font-size: 36px;
            padding: 0;
            width: auto;
            background: transparent;
            color: #818181;
        }

        .sidenav .closebtn:hover {
            color: #f1f1f1;
            background-color: transparent;
        }

        /* Brand Name */
        .sidenav-brand {
            font-size: 24px;
            color: #fff;
            padding-left: 32px;
            margin-bottom: 20px;
            display: block;
            font-weight: bold;
        }

        /* 5. Main Content Area */
        #main {
            transition: margin-left .4s;
            /* Changed: Removed bottom padding so footer can sit tight if needed */
            padding: 20px 0 0 0 ;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Ensures content pushes footer down, but footer sits tight to content if content is full */
        .content-wrapper {
            flex: 1;
        }
    </style>
</head>

<body class="">

<button class="hamburger-btn" onclick="openNav()" id="openNavBtn">
    <i class="bi bi-list"></i>
</button>

<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

    <span class="sidenav-brand">Tralla</span>

    <a asp-controller="Home" asp-action="Index">
        <i class="bi bi-house-door"></i> Home
    </a>
    <a asp-controller="Projects" asp-action="Index">
        <i class="bi bi-kanban"></i> Projects
    </a>

    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
    <a asp-controller="Projects" asp-action="Index" asp-route-user="@MyUserManager.GetUserId(User)">
        <i class="bi bi-person-workspace"></i> My Projects
    </a>

    <hr class="text-secondary mx-3" />

    <a asp-controller="Users" asp-action="Index" title="Manage">
        <i class="bi bi-person-circle"></i> @User.Identity.Name
    </a>

    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="sidenav-btn-logout">
            <i class="bi bi-box-arrow-left"></i> Logout
        </button>
    </form>
    }
    else
    {
    <a asp-area="Identity" asp-page="/Account/Register">
        <i class="bi bi-person-plus"></i> Register
    </a>
    <a asp-area="Identity" asp-page="/Account/Login">
        <i class="bi bi-box-arrow-in-right"></i> Login
    </a>
    }
</div>

<div id="main">

    <div class="container content-wrapper">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="bg-body-tertiary rounded shadow-sm border mx-4 bg-sec">
        <div class="container-fluid p-4 d-md-flex align-items-center justify-content-between">
            
            <span class="small text-body-secondary d-block text-center text-md-start">
                &copy; 2026 <a href="https://flowbite.com/" class="text-decoration-none text-reset hover-link fw-bold">Flowbite™</a>. All Rights Reserved.
            </span>

            <ul class="list-unstyled d-flex flex-wrap align-items-center justify-content-center justify-content-md-end mt-3 mt-md-0 mb-0 small fw-medium">
                <li class="me-3 me-md-4">
                    <a href="#" class="link-secondary text-decoration-none px-1">About</a>
                </li>
                <li class="me-3 me-md-4">
                    <a href="#" class="link-secondary text-decoration-none px-1">Privacy Policy</a>
                </li>
                <li class="me-3 me-md-4">
                    <a href="#" class="link-secondary text-decoration-none px-1">Licensing</a>
                </li>
                <li>
                    <a href="#" class="link-secondary text-decoration-none px-1">Contact</a>
                </li>
            </ul>

        </div>
    </footer>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
        document.getElementById("main").style.marginLeft = "250px";
        document.getElementById('openNavBtn').classList.add('d-none');
    }

    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
        document.getElementById("main").style.marginLeft = "0";
        document.getElementById('openNavBtn').classList.remove('d-none');
    }
</script>

@await RenderSectionAsync("Scripts", required: false)

</body>
</html>