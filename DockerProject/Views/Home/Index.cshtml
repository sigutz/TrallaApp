@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
ViewData["Title"] = "Home Page";
Layout = null;
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Tralla</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        /* Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
            line-height: 1.6;
            color: #333;
        }

        html {
            scroll-behavior: smooth;
        }

        /* Scrollbar */
        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track {
            background: #1a1a2e;
        }

        ::-webkit-scrollbar-thumb {
            background: #4FA4D9;
            border-radius: 5px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #2E7AB8;
        }

        /* Container */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Navigation */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .navbar .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
        }

        .navbar-brand {
            font-size: 2rem;
            font-weight: 700;
            background: linear-gradient(135deg, #2E7AB8, #87CEEB);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-decoration: none;
        }

        .nav-menu {
            display: flex;
            list-style: none;
            align-items: center;
            gap: 30px;
        }

        .nav-link {
            color: #1a1a2e;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: #2E7AB8;
        }

        .btn-login {
            border: 2px solid #2E7AB8;
            color: #2E7AB8;
            padding: 8px 25px;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-login:hover {
            background: #2E7AB8;
            color: white;
        }

        .btn-signup {
            background: linear-gradient(135deg, #ff3131, #ff914d);
            color: white;
            padding: 8px 25px;
            border-radius: 25px;
            font-weight: 600;
            border: none;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-signup:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(255, 49, 49, 0.4);
        }

        .nav-toggle {
            display: none;
            flex-direction: column;
            cursor: pointer;
            gap: 5px;
        }

        .nav-toggle span {
            width: 25px;
            height: 3px;
            background: #1a1a2e;
            transition: all 0.3s ease;
        }

        /* Hero Section */
        .hero-section {
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 150px 20px 100px;
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="grid" width="100" height="100" patternUnits="userSpaceOnUse"><path d="M 100 0 L 0 0 0 100" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100%" height="100%" fill="url(%23grid)"/></svg>');
            opacity: 0.3;
        }

        .hero-content {
            position: relative;
            z-index: 1;
            text-align: center;
            max-width: 900px;
            margin: 0 auto;
        }

        .hero-text {
            color: white;
        }

        .hero-title {
            font-size: 4rem;
            font-weight: 700;
            line-height: 1.2;
            margin-bottom: 30px;
        }

        .hero-subtitle {
            font-size: 1.5rem;
            color: rgba(255, 255, 255, 0.9);
            margin-bottom: 40px;
        }

        .hero-cta {
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn-hero-primary {
            background: linear-gradient(135deg, #ff3131, #ff914d);
            color: white;
            padding: 15px 50px;
            border-radius: 50px;
            font-size: 1.2rem;
            font-weight: 600;
            border: none;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
        }

        .btn-hero-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(255, 49, 49, 0.4);
            color: white;
        }

        .btn-hero-secondary {
            background: transparent;
            color: white;
            padding: 15px 50px;
            border-radius: 50px;
            font-size: 1.2rem;
            font-weight: 600;
            border: 2px solid white;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
        }

        .btn-hero-secondary:hover {
            background: white;
            color: #667eea;
        }

        /* Section Base */
        .section {
            padding: 100px 0;
        }

        .section-title {
            font-size: 3rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 20px;
            background: linear-gradient(135deg, #2E7AB8, #667eea);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .section-title.white {
            background: none;
            -webkit-background-clip: unset;
            -webkit-text-fill-color: white;
            color: white;
        }

        .section-subtitle {
            font-size: 1.2rem;
            text-align: center;
            color: #666;
            margin-bottom: 60px;
        }

        /* About Section */
        .about-section {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        .about-content {
            max-width: 900px;
            margin: 0 auto;
        }

        .lead {
            font-size: 1.1rem;
            line-height: 1.8;
            text-align: center;
            margin-bottom: 40px;
        }

        .about-highlights {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin: 50px 0;
        }

        .about-highlight {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .about-highlight h4 {
            font-size: 1.3rem;
            margin-bottom: 15px;
            color: #1a1a2e;
        }

        .about-highlight p {
            color: #666;
            line-height: 1.6;
        }

        .about-highlight.full {
            grid-column: 1 / -1;
        }

        .checklist {
            list-style: none;
            margin-top: 20px;
        }

        .checklist li {
            margin-bottom: 10px;
            padding-left: 30px;
            position: relative;
        }

        .checklist li::before {
            content: '✓';
            position: absolute;
            left: 0;
            color: #28a745;
            font-weight: bold;
            font-size: 1.2rem;
        }

        /* Features Section */
        .features-section {
            background: white;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
            margin-top: 60px;
        }

        .feature-card {
            background: white;
            border-radius: 20px;
            padding: 40px 30px;
            text-align: center;
            transition: all 0.3s ease;
            box-shadow: 0 5px 20px rgba(0,0,0,0.08);
            border: 2px solid transparent;
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
            border-color: #667eea;
        }

        .feature-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 15px;
            color: #1a1a2e;
        }

        .feature-description {
            color: #666;
            line-height: 1.6;
        }

        /* Statistics Section */
        .stats-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 30px;
            margin-top: 60px;
        }

        .stat-card {
            text-align: center;
            padding: 30px;
        }

        .stat-number {
            font-size: 4rem;
            font-weight: 700;
            display: block;
            margin-bottom: 10px;
        }

        .stat-label {
            font-size: 1.2rem;
            opacity: 0.9;
        }

        /* Testimonials Section */
        .testimonials-section {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        .testimonials-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
            margin-top: 60px;
        }

        .testimonial-card {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            position: relative;
            transition: all 0.3s ease;
        }

        .testimonial-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }

        .testimonial-card::before {
            content: '"';
            font-size: 6rem;
            position: absolute;
            top: -20px;
            left: 20px;
            color: #667eea;
            opacity: 0.2;
            font-family: Georgia, serif;
        }

        .testimonial-text {
            font-size: 1.1rem;
            line-height: 1.8;
            color: #333;
            margin-bottom: 25px;
            font-style: italic;
        }

        .testimonial-author {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .testimonial-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            font-weight: 600;
            flex-shrink: 0;
        }

        .testimonial-info h5 {
            margin: 0 0 5px 0;
            font-weight: 600;
            color: #1a1a2e;
        }

        .testimonial-info p {
            margin: 0;
            color: #666;
            font-size: 0.9rem;
        }

        /* CTA Section */
        .cta-section {
            background: linear-gradient(135deg, #ff3131, #ff914d);
            color: white;
            text-align: center;
        }

        .cta-title {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .cta-subtitle {
            font-size: 1.3rem;
            margin-bottom: 40px;
            opacity: 0.95;
        }

        .btn-cta-large {
            background: white;
            color: #ff3131;
            padding: 20px 60px;
            border-radius: 50px;
            font-size: 1.3rem;
            font-weight: 600;
            border: none;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
        }

        .btn-cta-large:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(255, 255, 255, 0.3);
            color: #ff3131;
        }

        .cta-note {
            margin-top: 30px;
            opacity: 0.9;
            font-size: 1rem;
        }

        /* Footer */
        .footer {
            background: #2d3142;
            color: white;
            padding: 60px 0 30px;
        }

        .footer-content {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 60px;
            margin-bottom: 40px;
        }

        .footer-brand {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 20px;
            background: linear-gradient(135deg, #667eea, #87CEEB);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .footer-description {
            color: rgba(255, 255, 255, 0.7);
            margin-bottom: 20px;
            line-height: 1.6;
            font-size: 0.95rem;
        }

        .footer-title {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .footer-links {
            list-style: none;
        }

        .footer-links li {
            margin-bottom: 10px;
        }

        .footer-links a {
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .footer-links a:hover {
            color: #87CEEB;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .nav-menu {
                position: fixed;
                left: -100%;
                top: 70px;
                flex-direction: column;
                background: white;
                width: 100%;
                text-align: center;
                transition: 0.3s;
                box-shadow: 0 10px 27px rgba(0,0,0,0.05);
                padding: 20px 0;
                gap: 15px;
            }

            .nav-menu.active {
                left: 0;
            }

            .nav-toggle {
                display: flex;
            }

            .hero-title {
                font-size: 2.5rem;
            }

            .hero-subtitle {
                font-size: 1.2rem;
            }

            .section-title {
                font-size: 2rem;
            }

            .about-highlights {
                grid-template-columns: 1fr;
            }

            .features-grid {
                grid-template-columns: 1fr;
            }

            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .testimonials-grid {
                grid-template-columns: 1fr;
            }

            .cta-title {
                font-size: 2rem;
            }

            .footer-content {
                grid-template-columns: 1fr;
            }
        }

        @@media (max-width: 480px) {
            .hero-title {
                font-size: 2rem;
            }

            .btn-hero-primary,
            .btn-hero-secondary {
                padding: 12px 30px;
                font-size: 1rem;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .stat-number {
                font-size: 3rem;
            }
        }
    </style>
</head>
<body>

<!-- Navigation -->
<nav class="navbar">
    <div class="container">
        <a href="#" class="navbar-brand">Tralla</a>
        <div class="nav-toggle" onclick="toggleMenu()">
            <span></span>
            <span></span>
            <span></span>
        </div>
        <ul class="nav-menu" id="navMenu">
            <li><a href="#about" class="nav-link">Despre</a></li>
            <li><a href="#features" class="nav-link">Funcționalități</a></li>
            <li><a href="#testimonials" class="nav-link">Testimoniale</a></li>
            <li><a class="btn-login" asp-area="Identity" asp-page="/Account/Login">Autentificare</a></li>
            <li><a class="btn-signup" asp-area="Identity" asp-page="/Account/Register">Înregistrare</a></li>
        </ul>
    </div>
</nav>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="hero-title">Transformă visele în realitate cu Tralla</h1>
                <p class="hero-subtitle">Platforma completă de management al proiectelor și task-urilor. Organizează, colaborează și atingi obiectivele mai rapid ca niciodată.</p>
                <div class="hero-cta">
                    <a class="btn-hero-primary" asp-area="Identity" asp-page="/Account/Register">Începe gratuit</a>
                    <a class="btn-hero-secondary" href="#about">Descoperă mai mult</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="about-section section">
    <div class="container">
        <h2 class="section-title">Despre Tralla</h2>
        <p class="section-subtitle">Platforma ta de încredere pentru productivitate și colaborare</p>

        <div class="about-content">
            <p class="lead">
                Tralla este mai mult decât un simplu instrument de management al task-urilor. Este ecosistemul complet care îți permite să transformi ideile în acțiuni concrete și să colaborezi eficient cu echipa ta.
            </p>

            <div class="about-highlights">
                <div class="about-highlight">
                    <h4>Misiunea noastră</h4>
                    <p>Să facem managementul proiectelor simplu, intuitiv și accesibil pentru toată lumea. Fie că ești freelancer, startup sau corporație, Tralla se adaptează nevoilor tale.</p>
                </div>
                <div class="about-highlight">
                    <h4>Viziunea noastră</h4>
                    <p>Credem că fiecare proiect merită șansa de a reuși. Cu instrumentele potrivite și o platformă intuitivă, succesul devine inevitabil.</p>
                </div>
            </div>

            <div class="about-highlight full">
                <h4>De ce Tralla?</h4>
                <ul class="checklist">
                    <li>Interfață intuitivă și ușor de utilizat</li>
                    <li>Colaborare în timp real cu echipa ta</li>
                    <li>Organizare flexibilă a proiectelor și task-urilor</li>
                    <li>Suport pentru upload-uri media și comentarii</li>
                    <li>Inteligență artificială pentru rezumate automate</li>
                    <li>Sistem de roluri și permisiuni avansat</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="features-section section">
    <div class="container">
        <h2 class="section-title">Funcționalități puternice</h2>
        <p class="section-subtitle">Tot ce ai nevoie pentru a-ți gestiona proiectele eficient</p>

        <div class="features-grid">
            <div class="feature-card">
                <h3 class="feature-title">Management Proiecte</h3>
                <p class="feature-description">Creează și organizează proiecte complexe cu ușurință. Structurează-ți munca în task-uri și subtask-uri pentru o vizibilitate completă.</p>
            </div>

            <div class="feature-card">
                <h3 class="feature-title">Colaborare în echipă</h3>
                <p class="feature-description">Invită membri în proiecte, atribuie task-uri și colaborează în timp real. Fiecare știe ce are de făcut.</p>
            </div>

            <div class="feature-card">
                <h3 class="feature-title">Sistem de comentarii</h3>
                <p class="feature-description">Discută despre task-uri direct în platformă. Votează comentarii și păstrează conversația organizată.</p>
            </div>

            <div class="feature-card">
                <h3 class="feature-title">Organizare cu Tag-uri</h3>
                <p class="feature-description">Folosește tag-uri personalizate pentru a categoriza și filtra task-urile după criterii relevante pentru tine.</p>
            </div>

            <div class="feature-card">
                <h3 class="feature-title">Rezumate AI</h3>
                <p class="feature-description">Inteligența artificială generează automat rezumate ale proiectelor tale, economisind timp prețios.</p>
            </div>

            <div class="feature-card">
                <h3 class="feature-title">Securitate și roluri</h3>
                <p class="feature-description">Sistem avansat de autentificare și roluri (Admin, Editor, User) pentru control complet asupra accesului.</p>
            </div>

            <div class="feature-card">
                <h3 class="feature-title">Upload Media</h3>
                <p class="feature-description">Atașează imagini și fișiere la task-uri pentru context vizual și documentație completă.</p>
            </div>

            <div class="feature-card">
                <h3 class="feature-title">Dashboard analitic</h3>
                <p class="feature-description">Vizualizează progresul echipei cu statistici detaliate și grafice interactive.</p>
            </div>

            <div class="feature-card">
                <h3 class="feature-title">Design Responsive</h3>
                <p class="feature-description">Accesează Tralla de pe orice dispozitiv - desktop, tabletă sau smartphone. Lucrează de oriunde.</p>
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="stats-section section">
    <div class="container">
        <h2 class="section-title white">Tralla în cifre</h2>
        <div class="stats-grid">
            <div class="stat-card">
                <span class="stat-number">10,000+</span>
                <span class="stat-label">Utilizatori activi</span>
            </div>
            <div class="stat-card">
                <span class="stat-number">50,000+</span>
                <span class="stat-label">Proiecte create</span>
            </div>
            <div class="stat-card">
                <span class="stat-number">200,000+</span>
                <span class="stat-label">Task-uri finalizate</span>
            </div>
            <div class="stat-card">
                <span class="stat-number">98%</span>
                <span class="stat-label">Satisfacție clienți</span>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section id="testimonials" class="testimonials-section section">
    <div class="container">
        <h2 class="section-title">Ce spun utilizatorii noștri</h2>
        <p class="section-subtitle">Mii de profesioniști au ales deja Tralla pentru proiectele lor</p>

        <div class="testimonials-grid">
            <div class="testimonial-card">
                <p class="testimonial-text">
                    Tralla a transformat complet modul în care echipa noastră colaborează. Productivitatea a crescut cu 40% în doar două luni de utilizare!
                </p>
                <div class="testimonial-author">
                    <div class="testimonial-avatar">AV</div>
                    <div class="testimonial-info">
                        <h5>Ana Vasilescu</h5>
                        <p>Project Manager, TechStart Solutions</p>
                    </div>
                </div>
            </div>

            <div class="testimonial-card">
                <p class="testimonial-text">
                    Interfața este incredibil de intuitivă! Am reușit să configurez primul proiect în mai puțin de 5 minute. Cea mai bună platformă pe care am folosit-o vreodată.
                </p>
                <div class="testimonial-author">
                    <div class="testimonial-avatar">MP</div>
                    <div class="testimonial-info">
                        <h5>Mihai Popescu</h5>
                        <p>Freelancer, Web Developer</p>
                    </div>
                </div>
            </div>

            <div class="testimonial-card">
                <p class="testimonial-text">
                    Funcționalitatea de AI pentru rezumate este genială! Ne economisește ore întregi la întâlniri și documentație. Highly recommended!
                </p>
                <div class="testimonial-author">
