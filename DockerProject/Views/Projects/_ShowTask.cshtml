@using DockerProject.Models
@using Microsoft.AspNetCore.Identity
@model DockerProject.Models.ProjectTask

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@functions {

    // Funcția ta pentru contrast


}

<button class="card p-2 border-0 shadow-sm w-100 text-start btn-light"
        style="transition: transform 0.2s;"
        onmouseover="this.style.transform='scale(1.02)'"
        onmouseout="this.style.transform='scale(1)'"
        id="btn-launch-task-modal-@Model.Id">

    <div class="d-flex flex-row gap-1 flex-wrap mb-2">
        @foreach (Tag tag in Model.Tags)
        {
            <div class="rounded px-2 py-0 shadow-sm"
                 style="background: @tag.HexColor; color: @Helper.GetContrastColor(tag.HexColor); font-size: 0.65rem; font-weight: 700;">
                @tag.Name
            </div>
        }
    </div>

    <div class="fw-bold text-dark" style="font-size: 0.9rem;">
        @Model.Name
    </div>

    <div class="d-flex justify-content-between mt-2 text-muted" style="font-size: 0.75rem;">
        <span><i class="bi bi-calendar"></i> @Model.DeadLine.ToString("dd MMM")</span>
        <span><i class="bi bi-chat-left"></i> @Model.Comments.Count()</span>
    </div>
</button>

<div class="modal fade" id="task-modal-@Model.Id" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content" style="border-radius: 12px; overflow: hidden;">

            <div class="modal-header bg-light border-bottom-0 pb-2">
                <div class="d-flex align-items-center gap-3 w-100">

                    <div class="fs-4">
                        @if (Model.Status == TaskStatusEnum.Done)
                        {
                            <i class="bi bi-check-circle-fill text-success"></i>
                        }
                        else if (Model.Status == TaskStatusEnum.InProgress)
                        {
                            <i class="bi bi-play-circle-fill text-primary"></i>
                        }
                        else if (Model.Status == TaskStatusEnum.Review)
                        {
                            <i class="bi bi-eye-fill text-warning"></i>
                        }
                        else
                        {
                            <i class="bi bi-circle text-secondary"></i>
                        }
                    </div>

                    <div class="d-flex align-items-center flex-grow-1 me-3" style="min-height: 38px;">

                        <div id="to-toggle-@Model.Id-2"
                             class="d-flex align-items-center w-100 text-dark text-break"
                             style="font-size: 1.25rem; font-weight: 600; line-height: 1.2;">

                            <span id="task-title-text-@Model.Id" class="me-2">@Model.Name</span>

                            @if (ViewBag.canEdit)
                            {
                                <button onclick="toggle('@Model.Id-1'); toggle('@Model.Id-2')"
                                        class="btn btn-sm border-0 text-muted p-1"
                                        title="Edit title"
                                        style="transition: color 0.2s; line-height: 0;">
                                    <i class="bi bi-pencil fs-6"></i>
                                </button>
                            }
                        </div>

                        <div id="to-toggle-@Model.Id-1" class="d-none w-100">
                            <div class="input-group">
                                <input type="text"
                                       id="new-task-title-input-@Model.Id"
                                       value="@Model.Name"
                                       class="form-control border-secondary border-end-0"
                                       style="font-size: 1.1rem; font-weight: 500;"
                                       placeholder="Task name...">

                                <button class="btn btn-outline-secondary border-start-0 border-end-0"
                                        type="button"
                                        title="Save"
                                        onclick="ajaxEditTaskTitle('@Model.Id', document.getElementById('new-task-title-input-@Model.Id').value)">
                                    <i class="bi bi-check-lg text-success"></i>
                                </button>

                                <button class="btn btn-outline-secondary border-start-0"
                                        type="button"
                                        title="Cancel"
                                        onclick="toggle('@Model.Id-1'); toggle('@Model.Id-2')">
                                    <i class="bi bi-x-lg text-muted"></i>
                                </button>
                            </div>
                        </div>

                    </div>

                    <div class="d-flex gap-2 align-items-center">

                        <button type="button" class="btn-close" id="btn-close-task-modal-@Model.Id"
                                aria-label="Close"></button>
                    </div>
                </div>
            </div>

            <div class="modal-body p-0">
                <div class="container-fluid">
                    <div class="row" style="min-height: 60vh;">
                        <div class="col-lg-8 col-md-7 p-4 bg-white" style="border-right: 1px solid #eee;">
                            <div class="mb-4">
                                <h6 class="text-uppercase text-muted small fw-bold mb-2">Tags</h6>
                                <div class="d-flex flex-wrap gap-2">
                                    @if (!Model.Tags.Any() && !ViewBag.canEdit)
                                    {
                                        <span class="text-muted fst-italic">No tags yet.</span>
                                    }
                                    @foreach (var tag in Model.Tags)
                                    {
                                        <span class="badge rounded-pill border d-flex align-items-center gap-1"
                                              id="tag-badge-@tag.Id"
                                              style="background-color: @tag.HexColor; color: @Helper.GetContrastColor(tag.HexColor);">
                                            @tag.Name

                                            <i class="bi bi-x-lg"
                                               style="cursor: pointer; opacity: 0.6;"
                                               onmouseover="this.style.opacity=1"
                                               onmouseout="this.style.opacity=0.6"
                                               onclick="removeTag('@tag.Id', '@Model.Id')"></i>
                                        </span>
                                    }
                                    @if (ViewBag.canEdit)
                                    {
                                        <partial name="_SelectTag.cshtml" model="@Model"/>
                                    }
                                </div>
                            </div>

                            <div class="mb-4">
                                <div class="d-flex justify-content-between align-items-center mb-2"
                                     style="min-height: 24px;">
                                    <h6 class="text-uppercase text-muted small fw-bold m-0">Description</h6>

                                    <div id="to-toggle-@Model.Id-desc-3" class="d-none gap-2">
                                        <button
                                            class="btn btn-sm btn-outline-success py-0 px-2"
                                            style="font-size: 0.75rem; font-weight: 600;"
                                            onclick="ajaxEditTaskDescription('@Model.Id', document.getElementById('new-task-desc-input-@Model.Id').value)">
                                            Save
                                        </button>

                                        <button
                                            class="btn btn-sm btn-outline-secondary py-0 px-2"
                                            style="font-size: 0.75rem; font-weight: 600;"
                                            onclick="toggle('@Model.Id-desc-1'); toggle('@Model.Id-desc-2'); toggle('@Model.Id-desc-3')">
                                            Cancel
                                        </button>
                                    </div>
                                </div>

                                <div id="to-toggle-@Model.Id-desc-2"
                                     class="p-3 bg-light rounded text-dark position-relative"
                                     style="min-height: 100px;">

                                    <div id="task-desc-text-@Model.Id">
                                        @if (!string.IsNullOrEmpty(Model.Description))
                                        {
                                            @Html.Raw(Model.Description.Replace("\n", "<br>"))
                                        }
                                        else
                                        {
                                            <span
                                                class="text-muted fst-italic">No description provided for this task.</span>
                                        }
                                    </div>

                                    @if (ViewBag.canEdit)
                                    {
                                        <button
                                            onclick="toggle('@Model.Id-desc-1'); toggle('@Model.Id-desc-2'); toggle('@Model.Id-desc-3')"
                                            class="btn btn-sm border-0 text-muted p-1 position-absolute top-0 end-0 m-2"
                                            title="Edit description"
                                            style="transition: color 0.2s;">
                                            <i class="bi bi-pencil fs-6"></i>
                                        </button>
                                    }
                                </div>

                                <div id="to-toggle-@Model.Id-desc-1" class="d-none w-100">
                                    <textarea id="new-task-desc-input-@Model.Id"
                                              class="form-control border-secondary"
                                              rows="4"
                                              style="font-size: 0.95rem;"
                                              placeholder="Task description...">@Model.Description</textarea>
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <h6 class="text-uppercase text-muted small fw-bold mb-2">Details</h6>
                                    <ul class="list-unstyled small">

                                        <li class="mb-2 d-flex justify-content-between">
                                            <span class="text-muted">Created:</span>
                                            <span class="fw-bold">@Model.AssignedDate.ToString("dd MMM yyyy")</span>
                                        </li>

                                        @{
                                            // Simple logic to choose a color based on the status
                                            var statusBadgeClass = Model.Status switch
                                            {
                                                DockerProject.Models.TaskStatusEnum.Done => "bg-success",
                                                DockerProject.Models.TaskStatusEnum.InProgress => "bg-primary",
                                                DockerProject.Models.TaskStatusEnum.Review => "bg-warning text-dark",
                                                _ => "bg-secondary" // Default for ToDo
                                            };
                                        }

                                        <li class="d-flex justify-content-between align-items-center py-2">
                                            <span class="text-muted ">
                                                Status:
                                            </span>

                                            <div id="to-toggle-@Model.Id-status-2" class="d-block">
                                                @if (ViewBag.canEdit)
                                                {
                                                    <span class="badge @statusBadgeClass rounded-pill shadow-sm px-3 py-2"
                                                          style="cursor: pointer; transition: all 0.2s ease; user-select: none;"
                                                          onclick="toggle('@Model.Id-status-1'); toggle('@Model.Id-status-2')"
                                                          onmouseover="this.style.opacity = '0.8'; this.style.transform = 'scale(1.05)';"
                                                          onmouseout="this.style.opacity = '1'; this.style.transform = 'scale(1)';"
                                                          title="Click to change status">

                                                        <span class="me-1">@Model.Status</span>
                                                        <i class="bi bi-pencil-fill opacity-50"
                                                           style="font-size: 0.7em;"></i>
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge @statusBadgeClass rounded-pill shadow-sm px-3 py-2">
                                                        <span class="me-1">@Model.Status</span>
                                                    </span>
                                                }
                                            </div>

                                            <div id="to-toggle-@Model.Id-status-1" class="d-none">
                                                <div class="input-group input-group-sm shadow-sm"
                                                     style="min-width: 160px;">
                                                    <select class="form-select border-success"
                                                            id="input-status-@Model.Id"
                                                            style="font-size: 0.85rem;">
                                                        @foreach (var status in Enum.GetValues(typeof(DockerProject.Models.TaskStatusEnum)))
                                                        {
                                                            <option value="@status"
                                                                    selected="@(Model.Status.Equals(status))">
                                                                @status
                                                            </option>
                                                        }
                                                    </select>

                                                    <button class="btn btn-success"
                                                            type="button"
                                                            onclick="ajaxEditTaskStatus('@Model.Id', document.getElementById('input-status-@Model.Id').value)">
                                                        <i class="bi bi-check-lg"></i>
                                                    </button>

                                                    <button class="btn btn-light border"
                                                            type="button"
                                                            onclick="toggle('@Model.Id-status-1'); toggle('@Model.Id-status-2')">
                                                        <i class="bi bi-x-lg text-secondary"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </li>


                                        <li class="mb-2 d-flex justify-content-between align-items-center height-control">
                                            <span class="text-muted fw-bold">Deadline:</span>

                                            <div id="to-toggle-@Model.Id-deadline-2" class="d-block">
                                                @if (ViewBag.canEdit)
                                                {
                                                    <span class="fw-bold text-danger"
                                                          id="display-deadline-@Model.Id"
                                                          style="cursor: pointer; border-bottom: 1px dashed transparent;"
                                                          onmouseover="this.style.borderBottom='1px dashed #dc3545'"
                                                          onmouseout="this.style.borderBottom='1px dashed transparent'"
                                                          onclick="toggle('@Model.Id-deadline-1'); toggle('@Model.Id-deadline-2')"
                                                          title="Click to edit deadline">
                                                        @Model.DeadLine.ToString("dd MMM yyyy HH:mm")
                                                        <i class="bi bi-pencil-fill ms-1 text-muted"
                                                           style="font-size: 0.7em;"></i>
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="fw-bold text-danger"
                                                          id="display-deadline-@Model.Id"
                                                          title="Click to edit deadline">
                                                        @Model.DeadLine.ToString("dd MMM yyyy HH:mm")
                                                    </span>
                                                }
                                            </div>

                                            <div id="to-toggle-@Model.Id-deadline-1" class="d-none">
                                                <div class="input-group input-group-sm">
                                                    <input type="datetime-local"
                                                           class="form-control"
                                                           id="input-deadline-@Model.Id"
                                                           value="@Model.DeadLine.ToString("yyyy-MM-ddTHH:mm")">

                                                    <button class="btn btn-success"
                                                            type="button"
                                                            onclick="ajaxEditTaskDeadline('@Model.Id', document.getElementById('input-deadline-@Model.Id').value)">
                                                        <i class="bi bi-check"></i>
                                                    </button>
                                                    <button class="btn btn-outline-secondary"
                                                            type="button"
                                                            onclick="toggle('@Model.Id-deadline-1'); toggle('@Model.Id-deadline-2')">
                                                        <i class="bi bi-x"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="mt-4">
                                                <div class="d-flex justify-content-between align-items-center mb-2">
                                                    <h6 class="text-uppercase text-muted small fw-bold m-0">Creative Media</h6>

                                                    @if (ViewBag.canEdit)
                                                    {
                                                        <div class="d-flex gap-2">
                                                            <input type="file" id="media-upload-@Model.Id" class="d-none"
                                                                   accept="image/*,video/*"
                                                                   onchange="ajaxUploadMedia('@Model.Id', this)">

                                                            <button class="btn btn-sm btn-outline-primary py-0 px-2"
                                                                    title="Upload Photo/Video"
                                                                    onclick="document.getElementById('media-upload-@Model.Id').click()">
                                                                <i class="bi bi-upload"></i>
                                                            </button>

                                                            <button
                                                                class="btn btn-sm btn-outline-danger py-0 px-2 @(string.IsNullOrEmpty(Model.MediaUrl) ? "d-none" : "")"
                                                                id="btn-delete-media-@Model.Id"
                                                                title="Remove Media"
                                                                onclick="ajaxDeleteMedia('@Model.Id')">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </div>
                                                    }
                                                </div>

                                                <div class="p-2 bg-light rounded text-center border position-relative"
                                                     style="min-height: 120px;">

                                                    <div id="media-spinner-@Model.Id"
                                                         class="d-none position-absolute top-50 start-50 translate-middle">
                                                        <div class="spinner-border text-primary" role="status"></div>
                                                    </div>

                                                    <div id="media-container-@Model.Id">
                                                        @if (!string.IsNullOrEmpty(Model.MediaUrl))
                                                        {
                                                            var ext = System.IO.Path.GetExtension(Model.MediaUrl).ToLower();
                                                            if (ext == ".mp4" || ext == ".webm" || ext == ".ogg")
                                                            {
                                                                <video controls class="img-fluid rounded"
                                                                       style="max-height: 300px; width: 100%;">
                                                                    <source src="@Model.MediaUrl"
                                                                            type="video/@ext.Substring(1)">
                                                                    Your browser does not support the video tag.
                                                                </video>
                                                            }
                                                            else
                                                            {
                                                                <img src="@Model.MediaUrl" class="img-fluid rounded"
                                                                     style="max-height: 300px; object-fit: contain;"
                                                                     alt="Creative Direction"/>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <div class="text-muted py-4 opacity-50">
                                                                <i class="bi bi-images fs-1"></i>
                                                                <p class="small m-0">No media uploaded</p>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>

                                </div>

                                <div class="col-md-6">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div>
                                            <h6 class="text-uppercase text-muted small fw-bold m-0">Assigned To</h6>
                                        </div>
                                        @if (ViewBag.canEdit)
                                        {
                                            <partial name="_AssignTaskToUser.cshtml" model="@Model"/>
                                        }
                                    </div>

                                    <div class="d-flex gap-1 flex-column" id="assigned-users-container-@Model.Id">
                                        @if (Model.Users.Any())
                                        {
                                            foreach (var user in Model.Users)
                                            {
                                                var displayName = user.UserName ?? user.Email;

                                                <div class="d-flex align-items-center justify-content-between mb-2"
                                                     id="assigned-user-row-@Model.Id-@user.Id">
                                                    <div>
                                                        <i class="bi bi-person-circle fs-6 me-1 text-secondary"></i>
                                                        <span class="small">@displayName</span>
                                                    </div>
                                                    <div>
                                                        <button class="btn btn-sm btn-outline-danger"
                                                                onclick="ajaxAsignOrRemoveUserFromTask('@user.Id', '@Model.Id', '@displayName')">
                                                            Remove
                                                        </button>
                                                    </div>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <span class="small text-muted"
                                                  id="unassigned-msg-@Model.Id">Unassigned</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-5 bg-light d-flex flex-column h-100 p-0"
                             style="border-left: 1px solid #ddd;">

                            <div class="p-3 border-bottom bg-white d-flex justify-content-between align-items-center">
                                <h6 class="m-0 fw-bold"><i class="bi bi-chat-left-text me-2"></i>Comments</h6>
                                <span class="badge bg-secondary rounded-pill">@Model.Comments.Count()</span>
                            </div>

                            <div class="flex-grow-1 p-3 overflow-auto" style="max-height: 500px;">
                                @{
                                    var topLevelComments = Model.Comments?
                                        .Where(c => c.CommentParentId == null)
                                        .OrderByDescending(c => c.Date);
                                }

                                @* ADDED ID HERE *@
                                <div id="root-comments-task-@Model.Id">
                                    @if (topLevelComments != null && topLevelComments.Any())
                                    {
                                        foreach (var comment in topLevelComments)
                                        {
                                            <partial name="~/Views/Comments/_CommentThread.cshtml" model="comment"/>
                                        }
                                    }
                                    else
                                    {
                                        <div class="text-center text-muted mt-5">
                                            <i class="bi bi-chat-square-dots fs-1"></i>
                                            <p class="small mt-2">No comments yet on this task.</p>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="p-3 bg-white border-top">
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    @* ADDED ONSUBMIT HERE *@
                                    <form onsubmit="ajaxAddComment(event, this, null)">
                                        <input type="hidden" name="TaskParentId" value="@Model.Id"/>
                                        <input type="hidden" name="ProjectParentId" value="@Model.ProjectParentId"/>

                                        <div class="d-flex gap-2 align-items-start">
                                            <div
                                                class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center flex-shrink-0"
                                                style="width: 32px; height: 32px; font-size: 0.8rem;">
                                                @UserManager.GetUserName(User)?.Substring(0, 1).ToUpper()
                                            </div>

                                            <div class="input-group">
                                                <textarea name="Content" class="form-control form-control-sm"
                                                          placeholder="Write a comment..." rows="1"
                                                          style="resize:none;" required></textarea>
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="bi bi-send-fill"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                }
                                else
                                {
                                    <p class="text-center small m-0"><a asp-area="Identity" asp-page="/Account/Login">Login</a>
                                        to comment.</p>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    document.addEventListener('click', function (e) {
        
        // --- 1. Logic to OPEN the modal ---
        const launchBtn = e.target.closest('button[id^="btn-launch-task-modal-"]');
        
        if (launchBtn) {
            e.preventDefault();
            e.stopPropagation(); // Stop bubbling

            const taskId = launchBtn.id.substring('btn-launch-task-modal-'.length);
            const modalEl = document.getElementById(`task-modal-${taskId}`);

            if (modalEl) {
                let modal = bootstrap.Modal.getInstance(modalEl);
                if (!modal) {
                    modal = new bootstrap.Modal(modalEl, {
                        backdrop: 'static',
                        keyboard: true
                    });
                }
                modal.show();
            }
            return; // Exit function so we don't trigger other checks
        }

        // --- 2. Logic to CLOSE the modal (Fix) ---
        const closeBtn = e.target.closest('button[id^="btn-close-task-modal-"]');
        
        if (closeBtn) {
            const taskId = closeBtn.id.substring('btn-close-task-modal-'.length);
            const modalEl = document.getElementById(`task-modal-${taskId}`);
            
            if (modalEl) {
                const modal = bootstrap.Modal.getInstance(modalEl);
                if (modal) {
                    modal.hide();
                }
            }
        }
    });
</script>