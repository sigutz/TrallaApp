@model IQueryable<DockerProject.Models.ApplicationUser>

<button type="button" id="btnLaunchModal2" class="btn btn-sm btn-outline-secondary">
    <i class="bi bi-person-fill-add fs-5"></i>
</button>

<div class="modal fade" id="fieldModal2" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-between align-items-center">
                <h5 class="modal-title">Invite Users</h5>
                <button type="button" class="btn-close" id="btnCloseIcon" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label text-muted small fw-bold">SEARCH USERS</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="bi bi-search text-muted"></i></span>
                        <input type="text" class="form-control border-start-0 ps-0" id="searchInput2" placeholder="Type name or email..." autocomplete="off"/>
                    </div>
                </div>

                <div class="d-block border rounded" id="sugestions" style="max-height: 300px; overflow-y: auto;">
                    @if (!Model.Any())
                    {
                    <div class="p-4 text-center text-muted">No users found in database.</div>
                    }
                    else
                    {
                    @foreach (var user in Model)
                    {
                    <div class="decautat d-flex p-3 border-bottom justify-content-between align-items-center bg-white hover-bg-light">
                        <div class="d-flex align-items-center gap-2">
                            <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 32px; height: 32px; font-size: 0.8rem;">
                                @(user.Email?.Substring(0,1).ToUpper() ?? "?")
                            </div>
                            <span class="text-dark small">@user.Email</span>
                        </div>
                        <button type="button" class="btn btn-sm btn-primary rounded-pill px-3"
                                onclick="InviteUser('@ViewBag.projectId','@user.Id')">
                            Invite
                        </button>
                    </div>
                    }
                    }
                </div>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary btn-sm" id="btnCloseBtn">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Bootstrap 5 Modal handling (assuming BS5 based on classes)
        const myModalEl = document.getElementById('fieldModal2');
        let modalInstance = null;

        // Open Modal
        $('#btnLaunchModal2').click(function() {
            $('#fieldModal2').modal('show');
        });

        // Close Modal
        $('#btnCloseIcon, #btnCloseBtn').click(function() {
            $('#fieldModal2').modal('hide');
        });

        // Search Logic
        $('#searchInput2').keyup(function () {
            var searchVal = $(this).val().toLowerCase().trim();

            $('.decautat').each(function () {
                var text = $(this).find('span').text().toLowerCase();

                // CHANGED: Logic now allows showing items if searchVal is empty OR if there is a match
                if (searchVal === "" || text.indexOf(searchVal) > -1) {
                    $(this).removeClass('d-none').addClass('d-flex');
                } else {
                    $(this).addClass('d-none').removeClass('d-flex');
                }
            });
        });
    });
</script>

<style>
    .hover-bg-light:hover {
        background-color: #f8f9fa !important;
    }
</style>