@model DockerProject.Models.Project
@inject DockerProject.Data.ApplicationDbContext _context
@{
    ViewBag.Title = "Add New Project";
    Layout = "_Layout";
}

<h2>Add New Project!</h2>

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            <form method="post" asp-action="New" asp-controller="Projects">

                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label">Titlu Proiect</label>
                    <input asp-for="Title" class="form-control"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 p-3 border rounded">
                    <label class="form-label fw-bold">Fields</label>

                    <div id="selectedFieldsBadges" class="d-flex flex-wrap gap-2 mb-2">
                        @foreach (var field in Model.Fields)
                        {
                            <div class="">
                                
                            </div>
                        }
                    </div>

                    <div id="hiddenInputsContainer"></div>

                    <partial name="~/Views/Fields/_AddField.cshtml" model="_context.Fields"/>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Descrierea Proiectului</label>
                    <textarea asp-for="Description" class="form-control summernote"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <button class="btn btn-outline-info" type="submit">Adauga Proiect</button>
            </form>
        </div>
    </div>
</div>
