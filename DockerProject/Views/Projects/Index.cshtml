@model DockerProject.Models.Project
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    ViewBag.Title = "Projects";
    Layout = "_Layout";

    var currUserId = UserManager.GetUserId(User);
}
<style>
    .card-h {
        display: -webkit-box;
        -webkit-line-clamp: 3; /* Limit to 3 lines */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        text-align: center; /* Center the text */
        min-height: 4.5em; /* Reserve space for 3 lines (approx 1.5em per line) */
    }

</style>

<div class="body">

    <div class="title">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>@ViewBag.Title</h2>
            <a class="btn btn-dark align-items-center" asp-controller="Projects" asp-action="New">
                <i class="bi bi-journal-plus fs-5"></i>
            </a>
        </div>
    </div>

    <div class="container">
        <div class="row g-4 justify-content-evenly">

            @foreach (Project project in ViewBag.Projects)
            {
                var userStarProject = project.StarredBy.FirstOrDefault(s => s.Id == currUserId);
                var starIcon = userStarProject != null ? "bi-star-fill" : "bi-star";


                <div class="col-12 col-md-5 d-flex align-items-stretch">

                    <div class="card w-100 h-100 shadow-sm ">

                        <div class="card-body d-flex flex-column ">

                            <h5 class="card-title text-center fw-bold mb-3">
                                @project.Title
                            </h5>

                            <div class="flex-grow-1 d-flex align-items-center justify-content-center mb-3">
                                <div class="card-h">
                                    @project.Description
                                </div>
                            </div>

                            <div
                                class="mt-auto d-flex justify-content-between align-items-center w-100 border-top pt-3">

                                <div class="d-flex align-items-center">
                                    <button onclick="starProject('@project.Id')" title="Add to favorites"
                                            class="badge bg-warning text-dark d-flex align-items-center gap-1 fs-6 border-0">
                                        <i id="star-icon-@project.Id" class="bi @starIcon fs-5"></i> 
                                        <div id="star-count-@project.Id" class="text-muted">
                                             @project.StarredBy.Count()
                                        </div>
                                    </button>

                                </div>

                                <div class="d-flex gap-2">
                                    @if (ViewBag.EsteAdmin || ViewBag.UserCurent == @project.FounderId)
                                    {
                                        <a href="/Projects/Edit/@project.Id"
                                           class="btn btn-sm btn-outline-warning">Edit</a>
                                    }
                                    <a href="/Projects/Show/@project.Id" class="btn btn-sm btn-outline-info">Show</a>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
