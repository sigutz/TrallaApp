@using Microsoft.AspNetCore.Identity
@using DockerProject.Models
@model Project

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject DockerProject.Data.ApplicationDbContext _context

@{
    ViewBag.Title = Model.Title;
    Layout = "_Layout";
    ViewData["ProjectFounderId"] = Model.FounderId;

    ViewBag.projectId = Model.Id;
    string currentUserId = UserManager.GetUserId(User);
    bool isAdmin = User.IsInRole("Admin");
    bool isOwner = currentUserId == Model.FounderId;
    
    // Member Status Checks
    bool isMember = _context.ProjectMembers.FirstOrDefault(pm => pm.Status == ProjectMemberStatus.Accepted && pm.MemberId == currentUserId) != null;
    bool isBanned = _context.ProjectMembers.FirstOrDefault(pm => pm.Status == ProjectMemberStatus.Banned && pm.MemberId == currentUserId) != null;
    bool isPending = _context.ProjectMembers.FirstOrDefault(pm => pm.Status == ProjectMemberStatus.Pending && pm.MemberId == currentUserId) != null;
    bool isInvited = _context.ProjectMembers.FirstOrDefault(pm => pm.Status == ProjectMemberStatus.Invited && pm.MemberId == currentUserId) != null;
    
    bool canEdit = isAdmin || isOwner;
    
    var userStarProject = Model.StarredBy.FirstOrDefault(s => s.Id == currentUserId);
    var starIcon = userStarProject != null ? "bi-star-fill" : "bi-star";
}
<div>
    @Model.AISummaryOverAll
</div>
<div>
    <a asp-controller="Projects" asp-action="GetAiDescription" asp-route-projectId="@Model.Id">aici</a>
</div>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">

            <div class="card shadow-sm mb-4">

                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-start">
                        
                        <div class="d-flex flex-column justify-content-center w-75">

                            <div class="d-flex align-items-center gap-2">
                                <button title="Add to favorites" onclick="starProject('@Model.Id')"
                                        class="badge bg-warning text-dark d-flex align-items-center gap-1 fs-6 border-0">
                                    <i id="star-icon-@Model.Id" class="bi @starIcon fs-5"></i>
                                    <div id="star-count-@Model.Id" class="text-muted text-center">
                                        @Model.StarredBy.Count()
                                    </div>
                                </button>

                                <div id="to-toggle-project-title-display" class="d-flex align-items-center gap-2">
                                    <h2 class="m-0" id="display-project-title-text">@Model.Title</h2>
                                    @if (canEdit)
                                    {
                                        <i class="bi bi-pencil text-secondary" style="cursor: pointer; opacity: 0.5;" 
                                           title="Edit Title"
                                           onclick="toggle('project-title-display'); toggle('project-title-edit')"></i>
                                    }
                                </div>

                                @if (canEdit)
                                {
                                    <div id="to-toggle-project-title-edit" class="d-none align-items-center gap-2 w-100">
                                        <input type="text" id="input-project-title" class="form-control" value="@Model.Title" />
                                        <button class="btn btn-sm btn-success" onclick="ajaxEditProjectTitle('@Model.Id')">
                                            <i class="bi bi-check-lg"></i>
                                        </button>
                                        <button class="btn btn-sm btn-secondary" onclick="toggle('project-title-display'); toggle('project-title-edit')">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    </div>
                                }
                            </div>

                            <div class="mt-2">
                                <div id="to-toggle-project-fields-display" class="d-flex align-items-center gap-2">
                                    <div class="d-flex flex-wrap gap-2 small" id="display-project-fields">
                                        @if (Model.Fields != null && Model.Fields.Any())
                                        {
                                            foreach (var field in Model.Fields)
                                            {
                                                <span class="badge js-contrast"
                                                      data-hex="@field.HexColor"
                                                      style="background-color: @field.HexColor;">
                                                    @field.Title
                                                </span>
                                            }
                                        }
                                    </div>
                                    @if (canEdit)
                                    {
                                        <i class="bi bi-pencil text-secondary" style="cursor: pointer; opacity: 0.5;"
                                           title="Edit Tags"
                                           onclick="toggle('project-fields-display'); toggle('project-fields-edit')"></i>
                                    }
                                </div>

                                @if (canEdit)
                                {
                                    <div id="to-toggle-project-fields-edit" class="d-none mt-2 p-3 border rounded bg-light">
                                        <label class="form-label fw-bold">Manage Fields</label>
                                        
                                        <div id="selectedFieldsBadges" class="d-flex flex-wrap gap-2 mb-2"></div>
                                        
                                        <div id="hiddenInputsContainer"></div>

                                        <div class="d-flex flex-wrap justify-content-between align-items-center mt-2">
                                            <partial name="~/Views/Fields/_AddField.cshtml" model="_context.Fields"/>
                                            
                                            <div class="d-flex gap-2 mt-2 mt-sm-0">
                                                <button class="btn btn-success btn-sm" onclick="ajaxUpdateProjectFields('@Model.Id')">Save Tags</button>
                                                <button class="btn btn-secondary btn-sm" onclick="toggle('project-fields-display'); toggle('project-fields-edit')">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="d-flex align-items-center gap-2">
                            @if (canEdit)
                            {
                                <form asp-controller="Projects" asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="projectid" value="@Model.Id"/>
                                    <button type="submit" class="btn btn-outline-danger btn-sm"
                                            onclick="return confirm('Are you sure you want to delete this project?');">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            }
                            else
                            {

                                <div class="text-end ms-2 small text-muted">
                                    <div>
                                        <i class="bi bi-calendar"></i> @Model.CreatedDate.ToString("MMM dd, yyyy")
                                    </div>
                                    <div>
                                        <i class="bi bi-person"></i> @(Model.Founder?.UserName ?? "Unknown")
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="mb-4">
                        <div class="border-bottom pb-2 d-flex justify-content-between align-items-center">
                            <h5 class="text-secondary m-0">Description</h5>
                            @if (canEdit)
                            {
                                <i class="bi bi-pencil text-secondary" style="cursor: pointer; opacity: 0.5;"
                                   title="Edit Description"
                                   onclick="toggle('project-desc-display'); toggle('project-desc-edit')"></i>
                            }
                        </div>

                        <div id="to-toggle-project-desc-display" class="mt-3">
                            <div id="display-project-desc">
                                @Html.Raw(Model.Description)
                            </div>
                        </div>

                        @if (canEdit)
                        {
                            <div id="to-toggle-project-desc-edit" class="d-none mt-3">
                                <textarea id="input-project-desc" class="form-control" rows="5">@Model.Description</textarea>
                                <div class="mt-2 d-flex gap-2">
                                    <button class="btn btn-outline-success btn-sm" onclick="ajaxEditProjectDescription('@Model.Id')">Save Description</button>
                                    <button class="btn btn-outline-secondary btn-sm" onclick="toggle('project-desc-display'); toggle('project-desc-edit')">Cancel</button>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="mb-4">
                        <h5 class="text-secondary border-bottom pb-2 d-flex justify-content-between">Tasks</h5>
                        <div class="container d-flex justify-content-evenly flex-row gap-5">
                            
                            <div class="d-flex card flex-column w-25">
                                <div class="card-header"><h6>To Do</h6></div>
                                <div class="card-body d-flex flex-column gap-2" id="task-container-ToDo">
                                    @foreach (ProjectTask task in Model.Tasks.Where(t => t.Status == TaskStatusEnum.ToDo))
                                    { <partial name="_ShowTask" model="task"/> }
                                </div>
                                <div class="card-footer">
                                    <button class="btn btn-secondary btn-sm w-100" onclick="ajaxCreateTask('@Model.Id', 'ToDo')">
                                        <i class="bi bi-plus-lg"></i> Add task
                                    </button>
                                </div>
                            </div>

                            <div class="d-flex card flex-column w-25">
                                <div class="card-header"><h6>In Progress</h6></div>
                                <div class="card-body d-flex flex-column gap-2" id="task-container-InProgress">
                                    @foreach (ProjectTask task in Model.Tasks.Where(t => t.Status == TaskStatusEnum.InProgress))
                                    { <partial name="_ShowTask" model="task"/> }
                                </div>
                                <div class="card-footer">
                                    <button class="btn btn-secondary btn-sm w-100" onclick="ajaxCreateTask('@Model.Id', 'InProgress')">
                                        <i class="bi bi-plus-lg"></i> Add task
                                    </button>
                                </div>
                            </div>

                            <div class="d-flex card flex-column w-25">
                                <div class="card-header"><h6>Review</h6></div>
                                <div class="card-body d-flex flex-column gap-2" id="task-container-Review">
                                    @foreach (ProjectTask task in Model.Tasks.Where(t => t.Status == TaskStatusEnum.Review))
                                    { <partial name="_ShowTask" model="task"/> }
                                </div>
                                <div class="card-footer">
                                    <button class="btn btn-secondary btn-sm w-100" onclick="ajaxCreateTask('@Model.Id', 'Review')">
                                        <i class="bi bi-plus-lg"></i> Add task
                                    </button>
                                </div>
                            </div>

                            <div class="d-flex card flex-column w-25">
                                <div class="card-header"><h6>Done</h6></div>
                                <div class="card-body d-flex flex-column gap-2" id="task-container-Done">
                                    @foreach (ProjectTask task in Model.Tasks.Where(t => t.Status == TaskStatusEnum.Done))
                                    { <partial name="_ShowTask" model="task"/> }
                                </div>
                                <div class="card-footer">
                                    <button class="btn btn-secondary btn-sm w-100" onclick="ajaxCreateTask('@Model.Id', 'Done')">
                                        <i class="bi bi-plus-lg"></i> Add task
                                    </button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between">
                        <div class="m-1">
                            <a asp-action="Index" class="btn btn-secondary btn-sm">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                        <div class="d-inline">
                            @if (!isOwner && !isBanned)
                            {
                                string textJoin = isMember ? "Leave" : isInvited ? "Accept invitation" : isPending ? "Cancel" : "Ask to join";
                                <button class="btn btn-outline-secondary btn-sm" onclick="ActionsOnJoin('@Model.Id')">
                                    <div id="join-btn">@textJoin</div>
                                </button>
                            }
                            else if (isOwner)
                            {
                                <div class="d-inline-flex">
                                    @if (@Model.Members.Any(mq => mq.Status == ProjectMemberStatus.Pending))
                                    {
                                        var pendingRequestCount = Model.Members.Count(pm => pm.Status == ProjectMemberStatus.Pending);
                                        <button class="btn btn-outline-secondary btn-sm"
                                                onclick="toggle('pendingRequests')"
                                                id="btn-show-pend-req">
                                            @pendingRequestCount Pending @(pendingRequestCount == 1 ? "request" : "requests")
                                        </button>
                                    }

                                    <div class="">
                                        <partial name="_InviteUserToProject" model="_context.ApplicationUsers"/>
                                    </div>
                                    <div class="m-1">
                                        <a class="btn btn-secondary btn-sm " onclick="toggle('manageMembers')">Members</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="d-none " id="to-toggle-pendingRequests">
                    <h3>Requests</h3>
                    @foreach (var pendingRequest in Model.Members.Where(pm => pm.Status == ProjectMemberStatus.Pending))
                    {
                        <div class="m-4 d-flex justify-content-evenly align-items-center "
                             id="pending-request-@pendingRequest.ProjectId-@pendingRequest.MemberId">
                            <div>@pendingRequest.Member.Email</div>
                            <div class="d-inline-flex g-4">
                                <div class="">
                                    <button class="btn btn-secondary btn-sm "
                                            onclick="RespondJoinRequest('@pendingRequest.ProjectId','@pendingRequest.MemberId', true)">
                                        <i class="bi bi-check-lg "></i>
                                    </button>
                                </div>
                                <br>
                                <div class="">
                                    <button class="btn btn-secondary btn-sm "
                                            onclick="RespondJoinRequest('@pendingRequest.ProjectId','@pendingRequest.MemberId', false)">
                                        <i class="bi bi-x "></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="d-none m-4" id="to-toggle-manageMembers">
                    <h5>Members</h5>
                    @foreach (var member in Model.Members.Where(pm => pm.Status == ProjectMemberStatus.Accepted))
                    {
                        <div class="d-flex justify-content-evenly align-items-center "
                             id="kick-@member.ProjectId-@member.MemberId">
                            <div>@member.Member.Email</div>
                            <div class="d-inline-flex m-1">
                                <div class="m-1">
                                    <a class="btn btn-secondary btn-sm">asign</a>
                                </div>
                                <div class="m-1">
                                    <a class="btn btn-danger btn-sm"
                                       onclick="KickUserFromProject('@member.ProjectId', '@member.MemberId')">kick</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div> 

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="m-0"><i class="bi bi-chat-left-text"></i> Comments</h5>
                </div>

                <div class="card-body">
                    @{
                        var topLevelComments = Model.Comments?
                            .Where(c => c.CommentParentId == null && c.TaskParentId == null)
                            .OrderByDescending(c => c.Date);
                    }

                    <div id="root-comments-@Model.Id">
                        @if (topLevelComments != null && topLevelComments.Any())
                        {
                            foreach (var comment in topLevelComments)
                            {
                                <partial name="~/Views/Comments/_CommentThread.cshtml" model="comment"/>
                            }
                        }
                        else
                        {
                            <p class="text-muted text-center py-3">No comments yet.</p>
                        }
                    </div>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <hr/>
                        <div class="d-flex gap-3">
                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center flex-shrink-0"
                                 style="width: 38px; height: 38px;">
                                @UserManager.GetUserName(User)?.Substring(0, 1).ToUpper()
                            </div>
                            <div class="flex-grow-1">
                                <form onsubmit="ajaxAddComment(event, this, null)">
                                    <input type="hidden" name="ProjectParentId" value="@Model.Id"/>
                                    <textarea name="Content" class="form-control mb-2" rows="2"
                                              placeholder="Add a comment..." required></textarea>
                                    <button type="submit" class="btn btn-primary btn-sm rounded-pill px-3">Post Comment</button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div> 
        </div> 
    </div> 
</div> 

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // 1. Contrast Color Logic for Badges
        document.querySelectorAll('.js-contrast').forEach(element => {
            const hex = element.getAttribute('data-hex');
            if (hex && typeof getContrastColor === 'function') {
                const contrast = getContrastColor(hex);
                element.style.color = contrast;
                element.style.border = '1.8px solid ' + contrast;
            } else {
                console.error("Function not found or hex missing!");
            }
        });

        // 2. Pre-populate the "Edit Fields" form
        // This attaches the hidden inputs and badges to the Edit div (id="to-toggle-project-fields-edit")
        // So when the user toggles the edit view, the current tags are already there.
        @if (Model.Fields != null && canEdit)
        {
            foreach (var field in Model.Fields)
            {
                // We pass 'true' as the last parameter to prevent closing the modal (which isn't open anyway)
                @:AttachFieldToForm('@field.Id', '@field.Title', '@field.HexColor', true);
            }
        }
    });
</script>