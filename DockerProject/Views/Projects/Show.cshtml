@using Microsoft.AspNetCore.Identity
@model Project

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject DockerProject.Data.ApplicationDbContext _context

@{
    ViewBag.Title = Model.Title;
    Layout = "_Layout";

    ViewData["ProjectFounderId"] = Model.FounderId;

    ViewBag.projectId = Model.Id;
    string currentUserId = UserManager.GetUserId(User);
    bool isAdmin = User.IsInRole("Admin");
    bool isOwner = currentUserId == Model.FounderId;
    bool isMember = _context.ProjectMembers.FirstOrDefault(pm => pm.Status == ProjectMemberStatus.Accepted && pm.MemberId == currentUserId) != null;
    bool isBanned = _context.ProjectMembers.FirstOrDefault(pm => pm.Status == ProjectMemberStatus.Banned && pm.MemberId == currentUserId) != null;
    bool isPending = _context.ProjectMembers.FirstOrDefault(pm => pm.Status == ProjectMemberStatus.Pending && pm.MemberId == currentUserId) != null;
    bool isInvited = _context.ProjectMembers.FirstOrDefault(pm => pm.Status == ProjectMemberStatus.Invited && pm.MemberId == currentUserId) != null;
    bool canEdit = isAdmin || isOwner;

    var userStarProject = Model.StarredBy.FirstOrDefault(s => s.Id == currentUserId);
    var starIcon = userStarProject != null ? "bi-star-fill" : "bi-star";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">

            <div class="card shadow-sm mb-4">

                <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">

                    <div class="d-flex flex-column justify-content-center">

                        <div class="d-flex align-items-center gap-2">
                            <button title="Add to favorites" onclick="starProject('@Model.Id')"
                                    class="badge bg-warning text-dark d-flex align-items-center gap-1 fs-6 border-0">
                                <i id="star-icon-@Model.Id" class="bi @starIcon fs-5"></i>
                                <div id="star-count-@Model.Id" class="text-muted text-center">
                                    @Model.StarredBy.Count()
                                </div>
                            </button>

                            <h2 class="m-0">@Model.Title</h2>
                        </div>

                        <div class="d-flex flex-wrap gap-2 mt-2 small">
                            @if (Model.Fields != null && Model.Fields.Any())
                            {
                                foreach (var field in Model.Fields)
                                {
                                    <span class="badge js-contrast"
                                          data-hex="@field.HexColor"
                                          style="background-color: @field.HexColor;">
                                        @field.Title
                                    </span>
                                }
                            }
                        </div>
                    </div>

                    <div class="d-flex align-items-center gap-2">

                        @if (canEdit)
                        {
                            <a asp-controller="Projects" asp-action="Edit" asp-route-id="@Model.Id"
                               class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>

                            <form asp-controller="Projects" asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="projectid" value="@Model.Id"/>
                                <button type="submit" class="btn btn-outline-danger btn-sm"
                                        onclick="return confirm('Are you sure you want to delete this project?');">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        }
                        else
                        {
                            <div class="text-end">
                                <div>
                                    <i class="bi bi-calendar"></i> Created: @Model.CreatedDate.ToString("MMM dd, yyyy")
                                </div>
                                <div>
                                    <i class="bi bi-person"></i> Founded by:
                                    <strong>@(Model.Founder?.UserName ?? "Unknown")</strong>
                                </div>
                            </div>
                        }

                    </div>
                </div>

                <div class="card-body">

                    <div class="mb-4">
                        <h5 class="text-secondary border-bottom pb-2">Description</h5>
                        <div class="mt-3">
                            @Html.Raw(Model.Description)
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5 class="text-secondary border-bottom pb-2 d-flex justify-content-between">Tasks</h5>
                        @if (Model.Tasks != null && Model.Tasks.Any())
                        {
                            <ul class="list-group list-group-flush mt-2">
                                @foreach (var task in Model.Tasks)
                                {
                                    <li class="list-group-item">@task.Name</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted mt-2 fst-italic">No tasks added yet.</p>
                        }
                    </div>
                </div>

                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between">
                        <div class="m-1">
                            <a asp-action="Index" class="btn btn-secondary btn-sm">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                        <div class="d-inline">

                            @if (!isOwner && !isBanned)
                            {
                                string textJoin = isMember ? "Leave" : isInvited? "Accept invitation" :isPending ? "Cancel" : "Ask to join";
                                <button class="btn btn-outline-secondary btn-sm" onclick="ActionsOnJoin('@Model.Id')">
                                    <div id="join-btn">@textJoin</div>
                                </button>
                            }
                            else if (isOwner)
                            {
                                <div class="d-inline-flex">
                                    @if (@Model.Members.Any(mq => mq.Status == ProjectMemberStatus.Pending))
                                    {
                                        var pendingRequestCount = Model.Members.Count(pm => pm.Status ==
                                                                                            ProjectMemberStatus.Pending);

                                        <button class="btn btn-outline-secondary btn-sm"
                                                onclick="toggle('pendingRequests')"
                                                id="btn-show-pend-req">
                                            @pendingRequestCount Pending @(pendingRequestCount == 1 ? "request" : "requests")
                                        </button>
                                    }
                                    
                                    <div class="">
                                        <partial name="_InviteUserToProject" model="_context.ApplicationUsers"/>
                                    </div>
                                    <div class="m-1">
                                        <a class="btn btn-secondary btn-sm "
                                           onclick="toggle('manageMembers')">Members</a>
                                    </div>

                                </div>
                            }

                        </div>
                    </div>
                </div>
                <div class="d-none " id="to-toggle-pendingRequests">
                    <h3>Requests</h3>
                    @foreach (var pendingRequest in Model.Members.Where(pm => pm.Status == ProjectMemberStatus.Pending))
                    {
                        <div class="m-4 d-flex justify-content-evenly align-items-center "
                             id="pending-request-@pendingRequest.ProjectId-@pendingRequest.MemberId">
                            <div>
                                @pendingRequest.Member.Email
                            </div>
                            <div class="d-inline-flex g-4">
                                <div class="">
                                    <button class="btn btn-secondary btn-sm "
                                            onclick="RespondJoinRequest('@pendingRequest.ProjectId','@pendingRequest.MemberId', true)">
                                        <i class="bi bi-check-lg "></i>
                                    </button>
                                </div>
                                <br>
                                <div class="">
                                    <button class="btn btn-secondary btn-sm "
                                            onclick="RespondJoinRequest('@pendingRequest.ProjectId','@pendingRequest.MemberId', false)">
                                        <i class="bi bi-x "></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="d-none m-4" id="to-toggle-manageMembers">
                    <h5>Members</h5>
                    @foreach (var member in Model.Members.Where(pm => pm.Status == ProjectMemberStatus.Accepted))
                    {
                        <div class="d-flex justify-content-evenly align-items-center "
                             id="kick-@member.ProjectId-@member.MemberId">
                            <div>
                                @member.Member.Email
                            </div>
                            <div class="d-inline-flex m-1">
                                <div class="m-1">
                                    <a class="btn btn-secondary btn-sm">asign</a>
                                </div>
                                <div class="m-1">
                                    <a class="btn btn-danger btn-sm"
                                       onclick="KickUserFromProject('@member.ProjectId', '@member.MemberId')">kick</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>


            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="m-0"><i class="bi bi-chat-left-text"></i> Comments</h5>
                </div>

                <div class="card-body">
                    @{
                        /*  afisare comenatarii stil reddit
                         *  e un dfs cu urmataorea structura
                         *
                         *  View Show(_Proiect)
                         *      Pentru fiecare _Comentariu din _Proiect fara Comentariu Parinte:
                         *          CommentThread(_Comentariu) // e un partial view
                         *
                         *  PartialView CommentThread(_Comentariu)
                         *      Afisare(_Comentariu) // nu e un partial, doar se afiseaza comentariul propriu-zis
                         *      Pentru fiecare _ComentariuCopil al lui _Comentariu:
                         *          CommentThread(_ComentariuCopil)
                         */

                        // selectam toate comentariile fara comentariu parinte
                        var topLevelComments = Model.Comments?
                            .Where(c => c.CommentParentId == null)
                            .OrderByDescending(c => c.Date);
                    }

                    @if (topLevelComments != null && topLevelComments.Any())
                    {
                        @foreach (var comment in topLevelComments)
                        {
                            // Il trimitem in partial pentru afisarea sa si afisaarea recursiva a copiilor
                            <partial name="~/Views/Comments/_CommentThread.cshtml" model="comment"/>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No comments yet. Be the first to say something!</p>
                    }

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <hr/>
                        <form asp-controller="Comments" asp-action="New" method="post">
                            <input type="hidden" name="ProjectParentId" value="@Model.Id"/>
                            <div class="form-group mb-3">
                                <label class="form-label text-muted">Add a comment:</label>
                                <textarea name="Content" class="form-control" rows="3" required></textarea>
                            </div>

                            <button type="submit" class="btn btn-primary btn-sm">Post Comment</button>
                        </form>
                    }
                    else
                    {
                        <hr/>
                        <p class="text-muted small">
                            <a asp-area="Identity" asp-page="/Account/Login">Login</a> to leave a comment.
                        </p>
                    }
                </div>
            </div>

        </div>
    </div>
    
    
    <!-- √én Views/Projects/Show.cshtml -->

<div class="tasks-container">
    <!-- Lista de task-uri existente -->
    <div id="tasks-list">
        @foreach(var task in Model.Tasks)
        {
            <div class="task-card" data-task-id="@task.Id">
                <div class="task-header">
                    <h5>@task.Name</h5>
                    <span class="task-status status-@task.Status.ToString().ToLower()">
                        @task.Status
                    </span>
                </div>
                @if(!string.IsNullOrEmpty(task.Description))
                {
                    <p class="task-description">@task.Description</p>
                }
                <div class="task-meta">
                    <small>üìÖ @task.DeadLine.ToString("MMM dd")</small>
                </div>
                
                @if(Model.FounderId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                {
                    <div class="task-actions">
                        <button class="btn-small" onclick="editTask('@task.Id', '@task.Name', '@task.Description')">‚úèÔ∏è</button>
                        <button class="btn-small btn-danger" onclick="deleteTask('@task.Id')">üóëÔ∏è</button>
                    </div>
                }
            </div>
        }
    </div>
    
    <!-- Buton Add Task -->
    @if(Model.FounderId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
    {
        <button id="add-task-btn" class="add-task-button" onclick="showTaskForm()">
            ‚ûï Add a task
        </button>
        
        <!-- Form pentru task nou (ascuns ini»õial) -->
        <div id="task-form" class="task-form" style="display: none;">
            <input type="text" id="task-name" class="task-input" placeholder="Enter task name..." />
            <textarea id="task-description" class="task-textarea" placeholder="Add description (optional)..." rows="2"></textarea>
            <input type="date" id="task-deadline" class="task-input" />
            
            <div class="task-form-actions">
                <button class="btn-primary" onclick="saveTask('@Model.Id')">Add task</button>
                <button class="btn-secondary" onclick="hideTaskForm()">‚úï</button>
            </div>
        </div>
    }
</div>

<style>
