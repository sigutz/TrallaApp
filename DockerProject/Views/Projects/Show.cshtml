</style>

<script>
function showTaskForm() {
    document.getElementById('add-task-btn').style.display = 'none';
    document.getElementById('task-form').style.display = 'block';
    document.getElementById('task-name').focus();
}

function hideTaskForm() {
    document.getElementById('add-task-btn').style.display = 'block';
    document.getElementById('task-form').style.display = 'none';
    // Clear form
    document.getElementById('task-name').value = '';
    document.getElementById('task-description').value = '';
    document.getElementById('task-deadline').value = '';
}

function saveTask(projectId) {
    const name = document.getElementById('task-name').value.trim();
    const description = document.getElementById('task-description').value.trim();
    const deadline = document.getElementById('task-deadline').value;
    
    if (!name) {
        document.getElementById('task-name').focus();
        return;
    }
    
    fetch('/ProjectTasks/Create', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: `projectId=${projectId}&name=${encodeURIComponent(name)}&description=${encodeURIComponent(description)}&deadline=${deadline}`
    })
    .then(r => r.json())
    .then(data => {
        if (data.success) {
            // AdaugƒÉ task-ul √Æn listƒÉ fƒÉrƒÉ refresh
            addTaskToList(data.taskId, name, description, deadline);
            hideTaskForm();
        }
    })
    .catch(err => console.error('Error:', err));
}

function addTaskToList(id, name, description, deadline) {
    const taskCard = document.createElement('div');
    taskCard.className = 'task-card';
    taskCard.setAttribute('data-task-id', id);
    taskCard.innerHTML = `
        <div class="task-header">
            <h5>${name}</h5>
            <span class="task-status status-todo">ToDo</span>
        </div>
        ${description ? `<p class="task-description">${description}</p>` : ''}
        <div class="task-meta">
            <small>üìÖ ${deadline || 'No deadline'}</small>
        </div>
        <div class="task-actions">
            <button class="btn-small" onclick="editTask('${id}', '${name}', '${description}')">‚úèÔ∏è</button>
            <button class="btn-small btn-danger" onclick="deleteTask('${id}')">üóëÔ∏è</button>
        </div>
    `;
    
    document.getElementById('tasks-list').appendChild(taskCard);
}

function deleteTask(taskId) {
    if (!confirm('Delete this task?')) return;
    
    fetch('/ProjectTasks/Delete', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: `id=${taskId}`
    })
    .then(r => r.json())
    .then(data => {
        if (data.success) {
            document.querySelector(`[data-task-id="${taskId}"]`).remove();
        }
    });
}

// ESC key pentru a √Ænchide form-ul
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && document.getElementById('task-form').style.display === 'block') {
        hideTaskForm();
    }
});

function updateTask(taskId) {
    const name = document.getElementById(`edit-name-${taskId}`).value.trim();
    const description = document.getElementById(`edit-desc-${taskId}`).value.trim();

    if (!name) return;

    fetch('/ProjectTasks/Edit', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: `id=${taskId}&name=${encodeURIComponent(name)}&description=${encodeURIComponent(description)}`
    })
        .then(r => r.json())
        .then(data => {
            if (data.success) {
                // Reconstruie»ôte task card-ul cu datele noi
                const taskCard = document.querySelector(`[data-task-id="${taskId}"]`);
                taskCard.innerHTML = `
                <div class="task-header">
                    <h5>${name}</h5>
                    <span class="task-status status-todo">ToDo</span>
                </div>
                ${description ? `<p class="task-description">${description}</p>` : ''}
                <div class="task-actions">
                    <button class="btn-small" onclick="editTask('${taskId}', '${name.replace(/'/g, "\\'")}', '${description.replace(/'/g, "\\'")}')">‚úèÔ∏è</button>
                    <button class="btn-small btn-danger" onclick="deleteTask('${taskId}')">üóëÔ∏è</button>
                </div>
            `;
            }
        });
}
</script>
   
</div>


<script>
    // Wait for the HTML to be ready
    document.addEventListener("DOMContentLoaded", function () {

        document.querySelectorAll('.js-contrast').forEach(element => {
            const hex = element.getAttribute('data-hex');
            if (hex && typeof getContrastColor === 'function') {
                const contrast = getContrastColor(hex);
                
                element.style.color = contrast;
                element.style.border = '1.8px solid ' + contrast;
            } else {
                console.error("Function not found or hex missing!");
            }
        });

    });
</script>

