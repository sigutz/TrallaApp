@model DockerProject.Models.Comment
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    ViewBag.ChildrenCommentsOpen = true;
    var currentUserId = UserManager.GetUserId(User);
    var projectFounderId = ViewData["ProjectFounderId"] as string;
    var isProjectOwner = !string.IsNullOrEmpty(currentUserId) && currentUserId == projectFounderId;
    var isCommentAuthor = !string.IsNullOrEmpty(currentUserId) && currentUserId == Model.AuthorId;
    var isAdmin = User.IsInRole("Admin");
    var canEdit = isAdmin || isProjectOwner || isCommentAuthor;

    var userVote = Model.Votes.FirstOrDefault(v => v.UserId == currentUserId);

    var iconVoteUp = userVote != null && userVote.IsUpvote ? "bi-caret-up-fill" : "bi-caret-up";
    var iconVoteDown = userVote != null && !userVote.IsUpvote ? "bi-caret-down-fill" : "bi-caret-down";

    var textClassUp = userVote != null && userVote.IsUpvote ? "text-warning" : "text-muted";
    var textClassDown = userVote != null && !userVote.IsUpvote ? "text-warning" : "text-muted";
}
<div class="ms-4 border-start ps-3 mt-3" id="comment-@Model.Id">
    <div class="d-flex gap-2 ">
        @* UPVOTE FORM *@
        <div class="d-flex flex-column text-center">
            <form asp-controller="Comments" asp-action="Vote" method="post" class="">
                <input type="hidden" name="commentId" value="@Model.Id"/>
                <input type="hidden" name="isUpvote" value="true"/>
                <button type="submit" class="btn btn-link p-0 text-decoration-none border-0 @textClassUp">
                    <i class="bi @iconVoteUp fs-5 "></i>
                </button>
            </form>

            @* SCORE *@
            <small class="fw-bold ">
                @(Model.Votes.Count(v => v.IsUpvote) - Model.Votes.Count(v => !v.IsUpvote))
            </small>

            @* DOWNVOTE FORM *@
            <form asp-controller="Comments" asp-action="Vote" method="post" class="">
                <input type="hidden" name="commentId" value="@Model.Id"/>
                <input type="hidden" name="isUpvote" value="false"/>
                <button type="submit" class="btn btn-link p-0 text-decoration-none border-0 @textClassDown">
                    <i class="bi @iconVoteDown fs-5"></i>
                </button>
            </form>
        </div>
        <div class="flex-grow-1">
            <div class="d-flex justify-content-between align-items-center">
                <span class="fw-bold small">@(Model.Author?.UserName ?? "Anonymous")</span>
                <span class="text-muted extra-small">@Model.Date.ToString("g")</span>
            </div>
            <p class="mb-1 text-dark">@Model.Content</p>

            <div class="d-flex justify-content-between">
                <div>  @* Reply Trigger *@
                    <div class="mb-2">
                        <button class="btn btn-link btn-sm p-0 text-decoration-none text-muted"
                                onclick="toggleChildren('@Model.Id')">

                            <i id="icon-@Model.Id" class="bi bi-folder-minus fs-6"></i>
                        </button>
                        <button class="btn btn-link btn-sm p-0 text-decoration-none text-muted"
                                onclick="toggleReplyForm('@Model.Id')">

                            <i class="bi bi-reply"></i> Reply
                        </button>
                    </div>
                </div>
                <div>
                    @if (canEdit)
                    {
                        <a asp-controller="Comments" asp-action="Edit" asp-route-id="@Model.Id"
                           class="btn btn-outline-warning btn-sm border-0"><i class="bi bi-pencil fs-6"></i></a>

                        <form asp-controller="Comments" asp-action="Delete" asp-route-id="@Model.Id" method="post"
                              class="d-inline">
                            <input type="hidden" name="commentid" value="@Model.Id"/>

                            <button type="submit" class="btn btn-outline-danger btn-sm border-0"
                                    onclick="return confirm('Are you sure you want to delete this project?');">
                                <i class="bi bi-trash fs-6"></i>
                            </button>
                        </form>
                    }
                </div>
            </div>

            @* Hidden Reply Form *@
            <div id="reply-form-@Model.Id" class="d-none mb-3">
                <form asp-controller="Comments" asp-action="New" method="post">
                    <input type="hidden" name="ProjectParentId" value="@Model.ProjectParentId"/>
                    <input type="hidden" name="CommentParentId" value="@Model.Id"/>
                    <textarea name="Content" class="form-control form-control-sm mb-2" rows="2"
                              placeholder="Write a reply..."></textarea>
                    <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                    <button type="button" class="btn btn-light btn-sm" onclick="toggleReplyForm('@Model.Id')">Cancel
                    </button>
                </form>
            </div>

            @* comentarii copil *@
            <div id="children-@Model.Id" class="d-block mb-3">
                @if (Model.ProjectParent?.Comments != null)
                {
                    var replies = Model.ProjectParent.Comments
                        .Where(c => c.CommentParentId == Model.Id)
                        .OrderByDescending(c => c.Date);
                    foreach (var reply in replies)
                    {
                        <partial name="CommentThread" model="reply"/>
                    }
                }
            </div>

        </div>
    </div>
</div>